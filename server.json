{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.invapi-org/invapi-mcp",
  "description": "Extract, create, convert & validate invoices (UBL, CII, XRechnung, ZUGFeRD, PDF, Excel)",
  "repository": {
    "url": "https://github.com/invapi-org/invapi-mcp",
    "source": "github"
  },
  "version": "1.0.1",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@invapi/mcp-server",
      "version": "1.0.5",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Your API key for Invapi",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "INVAPI_API_KEY"
        }
      ]
    }
  ]
}